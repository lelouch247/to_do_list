<h1> New Item To Do </h1>
<hr />


<%= form_for @posts do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title, autofocus: true %>

<br />

  <%= f.label :author %>:
  <%= f.text_field :author %>

  <br />

  <%= f.label :body %>:
  <%= f.text_area :body %>

  <br />

  <%= f.submit %>
<% end %>
